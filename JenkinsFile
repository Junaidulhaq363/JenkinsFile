pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'Hello World'
            }
        }
    }
     stages {
        stage('test') {
            steps {
                echo 'Hello World'
            }
        }
    }
     stages {
        stage('deploy') {
            steps {
                echo 'Hello World'
            }
        }
    }
    post { 
        success { 
            echo 'I will always say Hello again!'
        }
    }
}
// Script //
